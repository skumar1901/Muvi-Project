        <property name="connection.url">jdbc:mysql://localhost:3306/world</property>  
        <property name="connection.username">root</property>  
        <property name="connection.password">1@life.com</property>  
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property> 
        <property name="show_sql">true</property> 
        <mapping class="com.muvi.solution.entity.Email"/>
        <mapping class="com.muvi.solution.entity.Passport"/>
        <mapping class="com.muvi.solution.entity.Phone"/>
        
    </session-factory>  
  
